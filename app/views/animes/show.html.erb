<!-- app/views/animes/show.html.erb -->
<div class="container mt-5">
  <h1 class="mb-4"><%= @anime.title %></h1>

  <dl class="row">
    <dt class="col-sm-2">ジャンル</dt>
    <dd class="col-sm-10"><%= @anime.genre %></dd>

    <dt class="col-sm-2">ステータス</dt>
    <dd class="col-sm-10"><%= @anime.status.humanize %></dd>

    <dt class="col-sm-2">メモ</dt>
    <dd class="col-sm-10"><%= simple_format(@anime.description) %></dd>
  </dl>

  <%= link_to "一覧に戻る", animes_path, class: "btn btn-outline-primary me-2" %>
  <%= link_to "編集", edit_anime_path(@anime), class: "btn btn-outline-secondary me-2" %>
  <%= button_to "削除", anime_path(@anime),
        method: :delete,
        data: { confirm: "本当に削除しますか？" },
        class: "btn btn-outline-danger" %>
</div>
