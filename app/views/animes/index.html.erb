<!-- app/views/animes/index.html.erb -->
<div class="container mt-5">
  <h1 class="mb-4">マイアニメリスト</h1>
  <%= link_to "＋ 新規登録", new_anime_path, class: "btn btn-primary mb-3" %>

  <% if @animes.any? %>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% @animes.each do |anime| %>
        <div class="col">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to anime.title, anime_path(anime), class: "stretched-link text-decoration-none" %>
              </h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= anime.status.humanize %></h6>
              <p class="card-text"><%= truncate(anime.description, length: 80) %></p>
            </div>
            <div class="card-footer text-end">
              <%= link_to "編集", edit_anime_path(anime), class: "btn btn-sm btn-outline-secondary me-2" %>
              <%= button_to "削除", anime_path(anime),
                    method: :delete,
                    data: { confirm: "本当に削除しますか？" },
                    class: "btn btn-sm btn-outline-danger" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center">まだ何も登録されていません。</p>
  <% end %>
</div>
