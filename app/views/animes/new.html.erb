<!-- app/views/animes/new.html.erb -->
<h1>アニメ登録</h1>

<%= form_with model: @anime, local: true do |f| %>
  <% if @anime.errors.any? %>
    <div>
      <h2><%= pluralize(@anime.errors.count, "件のエラー") %>があります：</h2>
      <ul>
        <% @anime.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description, "あらすじ／メモ" %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :genre, "ジャンル" %><br>
    <%= f.text_field :genre %>
  </div>

  <div>
    <%= f.label :status, "ステータス" %><br>
    <%= f.select :status, Anime.statuses.keys.map { |s| [s.humanize, s] } %>
  </div>

  <div>
    <%= f.submit "登録する" %>
  </div>
<% end %>
